{% extends 'base.html.twig' %}

{% block title %}Exercise Logs{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Exercise Logs</h1>

        <table class="table table-dark">
            <thead>
            <tr>
                <th>Index</th>
                <th>Name</th>
                <th>User</th>
                <th>Created at</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for workout in workouts %}
                <tr>
                    <td>{{ workout.id }}</td>
                    <td>{{ workout.name }}</td>
                    <td>{{ workout.user.email }}</td>
                    <td>{{ workout.createdAt|date("F jS \\a\\t g:ia") }}</td>
                    <td>
                        <a href="{{ path('all_exercise_log', {'workoutId': workout.id}) }}" class="btn btn-primary">View Exercises</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
