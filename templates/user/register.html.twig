{% extends 'base.html.twig' %}

{% block title %}User Registration{% endblock %}

{% block body %}
    <div class="container custom-container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card custom-card">
                    <div class="card-header">
                        <h3 class="text-center">Register</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group custom-form-group">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'custom-form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control custom-form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="form-group custom-form-group">
                            {{ form_label(form.password, 'Password', {'label_attr': {'class': 'custom-form-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control custom-form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>
                        <div class="form-group custom-form-group">
                            {{ form_widget(form.button, {'attr': {'class': 'custom-button'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
