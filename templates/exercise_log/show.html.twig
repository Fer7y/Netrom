{% extends 'base.html.twig' %}

{% block title %}Exercise Log{% endblock %}

{% block body %}
    <div class="container">
        <h1>Exercise Log</h1>

        <div class="card mb-3">
            <div class="card-body">
                <h2 class="card-title">Workout: {{ workout.name }}</h2>
                <p class="card-text"><strong>User:</strong> {{ workout.pers.email }}</p>
                <p class="card-text"><strong>Created at:</strong> {{ workout.createdAt|date("F jS \\a\\t g:ia") }}</p>
            </div>
        </div>

        <h3>Exercises</h3>
        <table class="table table-dark table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>Duration</th>
                <th>Sets</th>
                <th>Reps</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.exercise.name }}</td>
                    <td>{{ exercise.duration }}</td>
                    <td>{{ exercise.sets }}</td>
                    <td>{{ exercise.reps }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No exercises found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="mt-3">
            {# Asigurați-vă că workoutId este furnizat pentru a genera link-ul corect #}
            <a href="{{ path('app_workout', {'workoutId': workout.id}) }}" class="custom-button2">Back to Workouts</a>
        </div>
    </div>
{% endblock %}
