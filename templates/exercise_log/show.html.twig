{% extends 'base.html.twig' %}

{% block title %}Exercise Log{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group a {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Exercise Log</h1>

        <h2>Workout: {{ workout.name }}</h2>
        <p><strong>User:</strong> {{ workout.pers.email }}</p>
        <p><strong>Created at:</strong> {{ workout.createdAt|date("F jS \\a\\t g:ia") }}</p>

        <h3>Exercises</h3>
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Name</th>
                <th>Duration</th>
                <th>Sets</th>
                <th>Reps</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.exercise.name }}</td>
                    <td>{{ exercise.duration }}</td>
                    <td>{{ exercise.sets }}</td>
                    <td>{{ exercise.reps }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No exercises found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="button-group">
            {# Asigurați-vă că workoutId este furnizat pentru a genera link-ul corect #}
            <a href="{{ path('app_workout', {'workoutId': workout.id}) }}" class="btn btn-secondary">Back to Workouts</a>
        </div>
    </div>
{% endblock %}
